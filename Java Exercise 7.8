import java.util.Scanner;

public class Main {

    // Method calculating average of array of integers
    public static int average(int[] array) {
        int sum = 0;
        for (int value : array) {
            sum += value;
        }
        return sum / array.length; // returning average as an integer
    }

    // Method calculating average of array of doubles
    public static double average(double[] array) {
        double sum = 0;
        for (double value : array) {
            sum += value;
        }
        return sum / array.length; // returning average as a double
    }

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        double[] doubleArray = new double[10];

        // Ask the user to enter ten double values
        System.out.println("Please enter ten double values:");
        for (int i = 0; i < doubleArray.length; i++) {
            doubleArray[i] = input.nextDouble();
        }

        // Call the average method for double arrays and display the result
        double averageValue = average(doubleArray);
        System.out.println("Average of the entered values is: " + averageValue);


